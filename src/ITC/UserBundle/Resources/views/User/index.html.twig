{% extends 'layout.html.twig' %}

{% block body %} 
    {{ parent() }} {#para que tenga en cuenta ambos bloques body#}
    <br><br> 
    <div class="container">
        <div class="col-md-12">
            <div class="page-header margin-none">
                <h2 class="padding-none">Users</h2>            
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th> User Name  </th>
                            <th> First Name </th>
                            <th> Last Name </th>
                            <th> Email </th>
                            <th> Rol </th>
                            <th> Created </th>
                            <th> Updated </th>
                            <th> Actions </th>
                        </tr> 
                    </thead>
                    <tbody>
                        {#Ciclo a partir de la variable users mandado desde el controlador#}
                        {% for user in users %}
                            <tr>
                                <td> {{ user.username }} </td>
                                <td> {{ user.firstname }} </td>
                                <td> {{ user.lastname }} </td>
                                <td> {{ user.email }} </td>
                                <td> 
                                    {% if user.role == 'ROLE_ADMIN' %}
                                        <strong>Administrator</strong>
                                    {% elseif user.role == 'ROLE_USER' %}
                                        <strong>User</strong>
                                    {% endif %}
                                </td>
                                <td> {{ user.createdAt|date('d-m-Y H:i') }} </td>
                                <td> {{ user.updatedAt|date('d-m-Y H:i') }} </td>
                                <td class="actions"> 
                                    <a class="btn btn-sm btn-info" href="#">View</a> 
                                    <a class="btn btn-sm btn-primary" href="#">Edit</a> 
                                    <a class="btn btn-sm btn-danger btn-delete" href="#">Delete</a> 
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    
{% endblock %}

