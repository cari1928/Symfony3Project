{% extends 'layout.html.twig' %}

{% block body %}
    <h2>Users</h2>
    <table class="table table-hover">
        <thead class="thead-inverse">
            <tr>
                <th> User Name  </th>
                <th> First Name </th>
                <th> Last Name </th>
                <th> Email </th>
                <th> Rol </th>
                <th> Created </th>
                <th> Updated </th>
                <th> Actions </th>
            </tr> 
        </thead>
        <tbody>
            {#Ciclo a partir de la variable users mandado desde el controlador#}
        {% for user in users %}
            <tr>
                <td> {{ user.username }} </td>
                <td> {{ user.firstname }} </td>
                <td> {{ user.lastname }} </td>
                <td> {{ user.email }} </td>
                <td> 
                    {% if user.role == 'ROLE_ADMIN' %}
                        <strong>Administrator</strong>
                    {% elseif user.role == 'ROLE_USER' %}
                        <strong>User</strong>
                    {% endif %}
                </td>
                <td> {{ user.createdAt|date('d-m-Y H:i') }} </td>
                <td> {{ user.updatedAt|date('d-m-Y H:i') }} </td>
                <td> 
                    <a href="#">View</a> 
                    <a href="#">Edit</a> 
                    <a href="#">Delete</a> 
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

